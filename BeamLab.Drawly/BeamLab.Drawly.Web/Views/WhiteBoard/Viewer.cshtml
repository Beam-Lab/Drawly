@{
    ViewData["Title"] = "Whiteboard";
}

<div style="position: fixed; right: 20px; width: 200px; height: 200px; margin: 8px; background-color: #eee; opacity: 0.5">

    <img height="200px" width="200px" id="preview" />

</div>

<div>
    <canvas id="canvas" height="2000" width="2000"></canvas>
</div>

<div id="toolbar">

    <div id="toolbarheader">Toolbar</div>

    <select id="color">
        <option value="black">Black</option>
        <option value="red">Red</option>
        <option value="yellow">Yellow</option>
        <option value="green">Green</option>
        <option value="blue">Blue</option>
    </select>
    <select id="size">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3" selected>3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <div id="output"></div>

    <a href="#" class="button" id="btn-clear">Clear</a> |
    <a href="#" target="_blank" class="button" id="btn-download">Download</a>

</div>

@section Scripts {

    <script src="~/js/whiteboard.js" asp-append-version="true"></script>

}